@page "/resumenventas"
@attribute [StreamRendering]

@inject IConsultaVentasService totalVentasService

<PageTitle>Consulta Total Ventas</PageTitle>

<h3>@Status</h3>



@code {
    string Status { get; set; } = string.Empty;
    string ResultadoServicio { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        Status = "Cargando..";
        try
        {
            ResultadoServicio = await totalVentasService.ObtenerTotalVentas();
            Status = ResultadoServicio;

        }
        catch (Exception)
        {
            Status = "Se encontró error en el servicio";
        }
    }

}
